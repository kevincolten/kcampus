<!-- Button to trigger modal -->
<a href="#myModal" role="button" class="btn btn-primary" 
   data-toggle="modal">Add Instructor</a>
 
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" 
     role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add Instructor</h3>
  </div>
  <div class="modal-body">
    <div class="form-horizontal">
      <form action="<%= instructors_url %>" method="post">
          <%= render partial: "form", locals: { instructor: @instructor,
                                                locations: @locations } %>
            <button class="btn" data-dismiss="modal" aria-hidden="true">
              Close
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div><br>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Mailbox</th>
      <th>Pay Rate</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.idn %></td>
        <td><%= instructor.full_name %></td>
        <td><%= instructor.phone %></td>
        <td><%= instructor.email %></td>
        <td><%= instructor.location.code %></td>
        <td><%= "$#{sprintf('%.2f',instructor.pay_rate)}"%></td>
        <td><%= link_to "edit", edit_instructor_url(instructor) %> |
            <%= link_to "delete", instructor_url(instructor), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>