<div class="small-form form-horizontal">
  <form action="<%= password_resets_url %>" method="post">
    <div class="form-group">
      <label class="control-label sr-only"></label>
      <h3>Enter Email</h3>
    </div>
    <div class="form-group">
      <label class="control-label" for="email">Email</label>
      <input type="email" id="email" 
             name="email" class="form-control">
    </div>
    <div class="form-group">
      <label class="control-label sr-only"></label>
      <input type="submit" value="Send Reset Email" class="btn btn-primary">
    </div>
  </form>
</div>