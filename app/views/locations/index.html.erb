
<!-- Button to trigger modal -->
<a href="#myModal" role="button" class="btn btn-primary" 
   data-toggle="modal">Add Location</a>
 
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" 
     role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add New Location</h3>
  </div>
  <div class="modal-body">
    <div class="form-horizontal">
      <form action="<%= locations_url %>" method="post">
            <%= render partial: "form" %>
            <button class="btn" data-dismiss="modal" aria-hidden="true">
              Close
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<br>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact Name</th>
      <th>Contact Phone</th>
      <th>Contact Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @locations.each do |location| %>
    <tr>
      <td>
        <%= location.name %> (<%= location.code %>) 
      </td>
      <td>
          <%= location.address %>, 
          <%= location.city %>,  
          <%= location.state %> 
          <%= location.zipcode %>
        </td>
        <td>
          <%= location.contact_name %>
        </td>
        <td>
          <%= location.contact_phone %>
        </td>
        <td>
          <%= location.contact_email %> 
        </td>
        <td>
          <%= link_to "edit", edit_location_url(location) %> | 
          <%= link_to "delete", location_url(location), :method => "delete" %>
        </td>
      </tr>
  <% end %>
</table>