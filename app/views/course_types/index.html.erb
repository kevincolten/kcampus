<% if current_user.client %>
  <!-- Button to trigger modal -->
  <a data-toggle="modal" href="#myModal" class="btn btn-primary">Add Course Type</a>
   
  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Add Course Type</h4>
        </div>
        <div class="modal-body">
          <div class="form-horizontal">
            <form action="<%= course_types_url %>" method="post">
                  <%= render partial: "form" %>
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <br>
<% end %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Discipline</th>
      <th>Level</th>
      <th>Long Name</th>
      <th>Short Name</th>
      <% if current_user.client %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @course_types.each do |course_type| %>
    <tr>
      <td><%= course_type.discipline %></td>
      <td><%= sprintf('%04d',course_type.level*100+1) %></td>
      <td><%= course_type.long_name %></td>
      <td><%= course_type.short_name %></td>
      <% if current_user.client %>
        <td><%= link_to "edit", edit_course_type_url(course_type)%> |
          <%= link_to "delete", course_type_url(course_type), :method => "delete" %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>