<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Discipline</th>
      <th>Level</th>
      <th>Long Name</th>
      <th>Short Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @course_types.each do |course_type| %>
    <tr>
      <td><%= course_type.discipline %></td>
      <td><%= sprintf('%04d',course_type.level*100+1) %></td>
      <td><%= course_type.long_name %></td>
      <td><%= course_type.short_name %></td>
      <td><%= link_to "edit", edit_course_type_url(course_type)%> |
        <%= link_to "delete", course_type_url(course_type), :method => "destroy" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add Course Type", new_course_type_url %>