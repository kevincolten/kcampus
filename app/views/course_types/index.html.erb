<!-- Button to trigger modal -->
<a href="#myModal" role="button" class="btn btn-primary" 
   data-toggle="modal">Add Course Type</a>
 
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" 
     role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add Course Type</h3>
  </div>
  <div class="modal-body">
    <div class="form-horizontal">
      <form action="<%= course_types_url %>" method="post">
        <input type="hidden" name="authenticity_token" 
         value="<%= form_authenticity_token %>">
        <%= render partial: "form", locals: { course_type: @course_type } %>
            <button class="btn" data-dismiss="modal" aria-hidden="true">
              Close
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div><br>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Discipline</th>
      <th>Level</th>
      <th>Long Name</th>
      <th>Short Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @course_types.each do |course_type| %>
    <tr>
      <td><%= course_type.discipline %></td>
      <td><%= sprintf('%04d',course_type.level*100+1) %></td>
      <td><%= course_type.long_name %></td>
      <td><%= course_type.short_name %></td>
      <td><%= link_to "edit", edit_course_type_url(course_type)%> |
        <%= link_to "delete", course_type_url(course_type), :method => "destroy" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>