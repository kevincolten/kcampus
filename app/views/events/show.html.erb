<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>DOB</th>
      <th>Attended</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @event_regs.each do |event_reg| %>
    <tr>
      <td>
        <% if event_reg.idn %>
          <%= event_reg.idn %>
        <% else %>
          <%= render partial: "edit_form", :locals => {event_reg: event_reg} %>
        <% end %>
      </td>
      <td><%= event_reg.name %></td>
      <td><%= event_reg.dob %></td>
      <% if event_reg.idn %>
      <td>
        <form action="<%= event_reg_url(event_reg) %>" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="authenticity_token" 
           value="<%= form_authenticity_token %>">
          <label class="radio" style="float:left; width:35px">
          <input type="radio" name="event_reg[attended]" id="event_reg_no" 
                 value="false" <%= 'checked' unless event_reg.attended %>
                 >No</label>
          <label class="radio" style="float:left; width:35px">
          <input type="radio" name="event_reg[attended]" id="event_reg_yes" 
                 value="true" <%= 'checked' if event_reg.attended %>
                 >Yes</label> 
          <input type="submit" value="submit" 
                 class="btn btn-mini btn-primary">
        </form>
      </td>
      <% else %>
      <td>id not found</td>
      <% end %>
      <td><%= link_to "edit", edit_event_reg_url(event_reg) %> | 
        <%= link_to "delete", event_reg_url(event_reg), :method => "delete" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>