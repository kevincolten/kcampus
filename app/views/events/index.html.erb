<div class="pull-right">
      <%= render partial: "courses/term_toggle" %>
</div>
<!-- Button to trigger modal -->
<a data-toggle="modal" href="#myModal" class="btn btn-primary">Add Event</a>
 
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add Event</h4>
      </div>
      <div class="modal-body">
        <div class="form-horizontal">
          <form action="<%= events_url %>" method="post">
                <%= render partial: "form" %>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>Room</th>
      <th>Contact Name</th>
      <th>Contact Phone</th>
      <th>Contact Email</th>
      <th>Max Seats</th>
      <th>Rem. Seats</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%=link_to event.name, event_url(event) %></td>
      <td><%= event.date.to_date.strftime('%b %e, %Y') %></td>
      <td><%= event.time %></td>
      <td><%= event.location.name %></td>
      <td><%= event.room %></td>
      <td><%= event.contact_name %></td>
      <td><%= event.contact_phone %></td>
      <td><%= event.contact_email %></td>
      <td><%= event.max_seats %></td>
      <td><%= event.remaining_seats %></td>
      <td>
        <%= link_to "edit", edit_event_url(event)%> | 
        <%= link_to "delete", event_url(event), :method => "delete "%>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>