<% if current_user.client %>
  <!-- Button to trigger modal -->
  <a href="#myModal" role="button" class="btn btn-primary" 
     data-toggle="modal">Create New Term</a>
   
  <!-- Modal -->
  <div id="myModal" class="modal-700 hide fade" tabindex="-1" 
       role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Create New Term</h3>
    </div>
    <div class="modal-body">
      <div class="form-horizontal">
        <form action="<%= terms_url %>" method="post">
              <%= render partial: "form" %>
              <button class="btn" data-dismiss="modal" aria-hidden="true">
                Close
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <br>
  <br>
<% end %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Year</th>
      <th>Semester</th>
      <th>Code</th>
      <th>Department Code</th>
      <th>Registration Dates</th>
      <th>Term Dates</th>
      <th>Add-Drop Date</th>
      <% if current_user.client %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= term.year %></td>
        <td><%= term.semester %></td>
        <td><%= term.code %></td>
        <td><%= term.dept_code %></td>
        <td><%= term.reg_dates %></td>
        <td><%= term.dates %></td>
        <td><%= "#{term.add_drop_end.strftime("%m/%d/%Y")}" %></td>
        <% if current_user.client %>
          <td><%= link_to "edit", edit_term_url(term) %> |
             <%= link_to "delete", term_url(term), :method => "destroy" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>