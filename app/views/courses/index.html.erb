<!-- Button to trigger modal -->
<a href="#myModal" role="button" class="btn btn-primary" 
   data-toggle="modal">Add Course</a>
 
<!-- Modal -->
<div id="myModal" class="modal-700 hide fade" tabindex="-1" 
     role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add New Course</h3>
  </div>
  <div class="modal-body">
    <div class="form-horizontal">
      <form action="<%= term_courses_url(@term.id) %>" method="post">
            <%= render partial: "form" %>
            <button class="btn" data-dismiss="modal" aria-hidden="true">
              Close
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<br>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Synonym</th>
      <th>Course Code</th>
      <th>Dept Code</th>
      <th>Type</th>
      <th>Days</th>
      <th>Time</th>
      <th>Instructor</th>
      <th>Min Enroll</th>
      <th>Max Enroll</th>
      <th>Budget Code</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.synonym %></td>
        <td><%= course.course_code %></td>
        <td><%=link_to "#{course.dept_code}", term_course_url(current_term.id, course) %></td>
        <td><%= course.course_type.short_name %></td>
        <td><%= course.small_days %></td>
        <td><%= course.start_time.strftime("%l:%M%P") %> -
            <%= course.end_time.strftime("%l:%M%P") %></td>
        <td><%= course.instructor.full_name %></td>
        <td><%=course.min_seats %></td>
        <td><%=course.max_seats %></td>
        <td><%=course.budget_code %></td>
        <td><%= link_to "edit", edit_term_course_url(current_term.id, course) %> | 
            <%= link_to "delete", term_course_url(current_term.id, course), :method => "delete" %>
      </tr>   
    <% end %>
  </tbody>
</table>