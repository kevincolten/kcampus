<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>DOB</th>
      <th>Phone</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.idn %></td>
      <td><%= student.name %></td>
      <td><%= student.dob %></td>
      <td><%= student.phone %></td>
      <td><%= student.email %></td>
      <td></td>
    </tr>
  <% end %>
</table>