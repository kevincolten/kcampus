<h4>Update Student List</h4>

<form action="<%= import_students_url %>" enctype="multipart/form-data" method="post">
  <input type="hidden" name="authenticity_token" 
     value="<%= form_authenticity_token %>">
  <input id="file" name="file" type="file">
  <br>
  <input type="submit" value="Import" class="btn btn-primary btn-xs">
  (column headers must be: idn, fname, lname, phone, email)
</form>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>DOB</th>
      <th>Phone</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.idn %></td>
      <td><%= student.name %></td>
      <td><%= student.dob %></td>
      <td><%= student.phone %></td>
      <td><%= student.email %></td>
      <td></td>
    </tr>
  <% end %>
</table>