<!DOCTYPE html>
<html>
<head>
  <title>AccAdultEd</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="#">kCamp.us</a>
      <ul class="nav">
        <% if current_user %>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == user_path(current_user) %>>
          <%= link_to "Home", user_url(current_user) %>
        </li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == locations_path %>>
        <%= link_to "Locations", locations_url %></li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == courses_path %>>
        <%= link_to "Courses", courses_url %></li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == instructors_path %>>
        <%= link_to "Instructors", instructors_url %></li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == admins_path %>>
        <%= link_to "Admins", admins_url %></li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == course_types_path %>>
        <%= link_to "Course Types", course_types_url %></li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == terms_path %>>
        <%= link_to "Terms", terms_url %></li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == students_path %>>
        <%= link_to "Students", students_url %></li>
        <li
        <%= 'class=active' if request.env['PATH_INFO'] == events_path %>>
        <%= link_to "Events", events_url %></li>
        <li><%= link_to "Log Out", session_url, :method => :delete %></li>
        <% elsif request.env['PATH_INFO'] == new_session_path %>
        <li><%= link_to "Claim Account", new_user_url %></li>
        <% else %>
        <li><%= link_to "Log In", new_session_url %></li>
        <% end %>
      </ul>
    </div>
  </div>
<%= yield %>

</body>
</html>